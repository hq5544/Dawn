{{!< default}}

<main class="site-main">

    {{#post}}
        {{> "content" width="wide"}}
    {{/post}}

    {{#post}}
        {{> "comments"}}
    {{/post}}

    {{#if @custom.show_related_posts}}
        {{> "related-posts"}}
    {{/if}}

    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            document.querySelectorAll('pre[class*=language-]').forEach(function (node) {
                node.classList.add('line-numbers');
            });
            Prism.highlightAll();
        });
    </script>

</main>